<%- include("../pages/header") %>
<div id="paycom">
<div class="row">
    <div class="col-md-6">
        <!-- BEGIN SAMPLE TABLE PORTLET-->
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-comments"></i>Payement </div>
                <div class="tools">
                    <a href="javascript:;" class="remove"> </a>
                </div>
            </div>
            <div class="portlet-body">
            <!-- <form role="form"> -->
                    <div class="form-body">
                        <div class="form-group">
                            <label>Payement</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-user"></i>
                                </span>
                                <input type="number" v-model="payee=net" class="form-control input-circle-right" required placeholder="Ariary"> </div>
                        </div>
                        <div class="form-group">
                            <label>Date de payement</label>
                            <div class="input-group">
                                <span class="input-group-addon input-circle-left">
                                    <i class="fa fa-envelope"></i>
                                </span>
                                <input type="date" v-model="datepayement" class="form-control input-circle-right" placeholder="date de debut"> </div>
                        </div>
                        <div class="form-group">
                            <label>Date de reste</label>
                            <div class="input-group">
                                <span class="input-group-addon input-circle-left">
                                    <i class="fa fa-phone"></i>
                                </span>
                                <input type="date" v-model="dateEcheance" class="form-control input-circle-right" placeholder="fin de payement"> </div>
                        </div>
                        
                    </div>
                   
                    <div class="form-actions">
                            
                        <a href="/historiquepayement">
                        <button   @click="payer" class="btn blue"><i class="fa fa-save"></i> <span>payee </span></button>
                        </a>
                    </div>
                <!-- </form> -->
            </div>
        </div>
        <!-- END SAMPLE TABLE PORTLET-->
    </div>
    <div class="col-md-6">
        <!-- BEGIN CONDENSED TABLE PORTLET-->
        <div class="portlet box yellow">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-picture"></i>Liste de produit commande </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"> </a>
                    <a href="javascript:;" class="remove"> </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-scrollable">
                    <table class="table table-condensed table-hover">
                        <thead>
                            <tr>
                                <th> intrants </th>
                                <th>nom produit </th>
                                <th> Unite </th>
                                <th> qt </th>
                                <th> type </th>
                                <th> Prix </th>
                                <th>Sous-total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr v-for="listes in liste" :key="listes.id">
                                <td> {{listes.produits.intrants.name}} </td>
                                <td> {{listes.produits.name}} </td>
                                <td> {{listes.produits.unite}} </td>
                                <td> {{listes.qt}} </td>
                                <td> <span v-if="listes.condition == 1">Gros</span><span v-else>Details</span> </td>
                                <td><span v-if="listes.condition == 1">{{listes.produits.pugros}}</span><span v-else>{{listes.produits.pudetail}}</span></td>
                                <td><span v-if="listes.condition == 1">{{listes.produits.pugros * listes.qt}}</span><span v-else>{{listes.produits.pudetail* listes.qt}}</span> Ar</td>
                            </tr>
                            
                        </tbody>
                        <footer>
                        <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td style="text-align:center;"><strong><i> Total :</i> </strong></td>
                        <td>{{net}} Ariary</td>
                        </tr>
<!--                        
                        <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td style="text-align:center;"><strong><i> remise :</i> </strong></td>
                        <td>{{(liste[0]).remise}} %</td>
                        </tr> -->
                        <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td style="text-align:center; font-size:20px;"><strong><i class="fa fa-shopping-cart"> Total Net a payee :</i> </strong></td>
                        <!-- <td>{{(net) - (net * (liste[0]).remise / 100)}} Ariary</td>? -->
                        <td>{{net}} Ariary</td>
                        </tr>
                        </footer>
                    </table>
                    <div class="form-group">
                            <label>vola </label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-user"></i>
                                </span>
                                <input type="number"  v-model="nety" @Keyup="famerimbola" class="form-control input-circle-right" required placeholder="Ariary"> </div>
                        </div>
                    </div>
                    <div class="form-group">
                            <label>famerimbola</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-user"></i>
                                </span>
                                <input type="number" v-model="vola" class="form-control input-circle-right" required placeholder="Ariary"> </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END CONDENSED TABLE PORTLET-->
    </div>
</div>
</div>
<%- include("../pages/footer",{
    script:`
    <script src="../assets/projet/commande/paycom.js"></script>
    `
}) %>