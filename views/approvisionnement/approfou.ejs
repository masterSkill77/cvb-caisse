<%- include("../pages/header") %>
<div id="appro">
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="/dashboard">Accueil</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Approvisionnement</span>
        </li>
    </ul>
    <div class="page-toolbar">
        <div id="dashboard-report-range" class="pull-right tooltips btn btn-sm" data-container="body" data-placement="bottom" data-original-title="Change dashboard date range">
            <i class="icon-calendar"></i>&nbsp;
            <span class="thin uppercase hidden-xs"></span>&nbsp;
            <i class="fa fa-angle-down"></i>
        </div>
    </div>
</div>
<h3 class="page-title"> ajout d'un fournisseur
    <small>pour approvisionnee</small>
</h3>
<div class="row">
    <div class="col-md-6">
        <div class="portlet green-sharp box">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-cogs"></i>faire une approvisionnement  </div>
            </div>
            <!-- modal ajout fournisseeur -->
            <div class="portlet-body">
                <p>
                    <a class="btn yellow" data-toggle="modal" href="#basic"> <i class="fa fa-user"></i> Ajouter un fournisseur </a>
                </p>
                <div class="modal fade" id="basic" tabindex="-1" role="basic" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                                <h4 class="modal-title">Ajout fournisseur</h4>
                            </div>
                            <div class="modal-body">
                             <form>
                             <div class="form-body">
                        <div class="form-group">
                            <label>Nom fournisseur</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-user"></i>
                                </span>
                                <input type="text" v-model="name" class="form-control input-circle-right" required placeholder="Nom ..."> </div>
                        </div>
                        <div class="form-group">
                            <label>Adress fournisseur</label>
                            <div class="input-group">
                                <span class="input-group-addon input-circle-left">
                                    <i class="fa fa-envelope"></i>
                                </span>
                                <input type="text" v-model="adress" class="form-control input-circle-right" placeholder="Address..."> </div>
                        </div>
                        <div class="form-group">
                            <label>Contact</label>
                            <div class="input-group">
                                <span class="input-group-addon input-circle-left">
                                    <i class="fa fa-phone"></i>
                                </span>
                                <input type="number" v-model="contact" class="form-control input-circle-right" placeholder="0203040"> </div>
                        </div>
                        
                    </div>
                              
                            </div>
                            <div class="modal-footer">
                                <button type="button" @click="addfournisseur" data-dismiss="modal" class="btn btn-outline sbold blue"><i class="fa fa-save"></i><span>Enregistree</span> </button>
                                <button type="button" class="btn btn-outline sbold red" data-dismiss="modal"> <i class="fa fa-share">
                        </i> <span> Annulle </span></button>
                            </div>
                        </div>
                        <!-- /.modal-content -->
                        </form>
                    </div>
                    <!-- /.modal-dialog -->
                </div>
                <div id="blockui_sample_3_2_element">
                <div class="portlet-body form">
                <form role="form">
                    <div class="form-body">
                        <div class="form-group">
                            <label>Nom Fournissseur</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                <i class="fa fa-envelope"></i>
                                </span>
                                 <select  v-model="idfou" class="form-control" name="delivery">
                                <option :key="list.id" :value="list.id" v-for="list in listefou">{{list.name}}</option>
                            </select>
                         </div>
                        </div>
                        <div class="form-group">
                            <label>Date d'approvision</label>
                            <div class="input-group">
                                <span class="input-group-addon input-circle-left">
                                    <i class="fa fa-date"></i>
                                </span>
                                <input  type="date" v-model="dateappro" class="form-control input-circle-right" placeholder="date..."> </div>
                        </div>
                    </div>
                </form>
            </div>
                </div>
            </div>
        </div>
    </div>
     <div class="col-md-6">
        <!-- BEGIN SAMPLE TABLE PORTLET-->
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-comments"></i>Ajout des produit </div>
                <div class="tools">
                    <a href="javascript:;" class="remove"> </a>
                </div>
            </div>
            <div class="portlet-body">
            <form role="form">
                    <div class="form-body">
                        <div class="form-group">
                            <label>Nom produit</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                <i class="fa fa-envelope"></i>
                                </span>
                              <select v-model="idpro" class="form-control" name="delivery">
                                <option :key="prod.id" :value="prod" v-for="prod in produitliste">{{prod.name}}</option>
                            </select>
                         </div>
                        </div>
                        <div class="form-group">
                            <label>quantit√© commande</label>
                            <div class="input-group">
                                <span class="input-group-addon input-circle-left">
                                    <i class="fa fa-date"></i>
                                </span>
                                <input  type="number" v-model="qt" placeholder="1,2..." class="form-control input-circle-right"> </div>
                        </div>
                    </div>
                    <div class="form-group">
                            <label>type de choix</label>
                            <div class="checkbox-list">
                                <label class="checkbox-inline">
                                    <input type="radio" @click="condition=1" id="inlineCheckbox1" name="type" value="option1">en  Gros </label>
                                <label class="checkbox-inline">
                                    <input type="radio" @click="condition=0" id="inlineCheckbox2" checked name="type"  value="option2"> en Detail </label>
                            </div>
                        </div>
                       
                    <div class="form-actions">
                        <button @click.prevent="next" class="btn blue" >                                                                                                                                   
                        <i class="fa fa-save"></i> <span> Suivant </span></button>
                        <button type="button" v-if="listecomm" @click="terminer"  class="btn default">
                            <a href="/appropay">                                                                         
                        <i class="fa fa-share" ></i> <span> Terminer </span></a>
                    </button>
                    </div>
                </form>
            </div>
        </div>
        <!-- END SAMPLE TABLE PORTLET-->
    </div>











    <!-- 3em tableaux -->
     <div class="col-md-12">
        <!-- BEGIN CONDENSED TABLE PORTLET-->
        <div class="portlet box yellow">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-picture"></i>Liste de produit commande </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"> </a>
                    <a href="javascript:;" class="remove"> </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-scrollable">
                    <table class="table table-condensed table-hover">
                        <thead>
                            <tr>
                                <th> numero </th>
                                <th> intrants </th>
                                <th> produit </th>
                                <th> Qt </th>
                                <th> Unite </th>
                                <th> type </th>
                                <th> Prix </th>
                                <th> Sous-total </th>
                                <th> Action </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr  v-for="appro in listecomm" :key="appro.id" class="odd gradeX">
                                <!-- <td> {{appro.produit.intrants.name}} </td> -->


                                <td> {{appro.produit.id}} </td>
                                <td> {{appro.produit.intrants.name}} </td>
                                <td> {{appro.produit.name}} </td>
                                <td> {{appro.qt}} </td>
                                <td> {{appro.produit.unite}} </td>
                                <td>
                                    <span class="label label-sm label-danger"> {{(appro.condition == 0) ? "Detail" : "Gros"}} </span>
                                </td>
                                <td> {{(appro.condition == 0) ? appro.produit.puvente : appro.produit.puvente}} Ar</td>
                                <td> {{(appro.condition==0) ? (appro.produit.puvente * appro.qt) : (appro.produit.puvente * appro.qt)}}</td>
                                <td @click="deleteThis(appro)">
                                <span class="label label-sm label-danger" style="cursor: pointer;"> Annuler</span>
                                </td>
                                
                                
                                

                            </tr>
                            
                        </tbody>
                        <footer>
                        <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td style="text-align:center; font-size:20px;"><strong><i class="fa fa-shopping-cart"> Total Net a payee :</i> </strong></td>
                        <td>{{netApayer}} Ar</td>
                        </tr>
                        </footer>
                    </table>
                </div>
            </div>
        </div>
        <!-- END CONDENSED TABLE PORTLET-->
    </div>
</div>


</div>
