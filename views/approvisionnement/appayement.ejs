<%- include("../pages/header") %>
<div id="payappro">
<div class="row">
    <div class="col-md-6">
        <!-- BEGIN SAMPLE TABLE PORTLET-->
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-comments"></i>Ajout des produit </div>
                <div class="tools">
                    <a href="javascript:;" class="remove"> </a>
                </div>
            </div>
            <div class="portlet-body">
            <form role="form">
                    <div class="form-body">
                        <div class="form-group">
                            <label>Payement</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-user"></i>
                                </span>
                                <input v-model="payee=net" type="number" class="form-control input-circle-right" required placeholder="Ariary"> </div>
                        </div>
                        <div class="form-group">
                            <label>Date de payement</label>
                            <div class="input-group">
                                <span class="input-group-addon input-circle-left">
                                    <i class="fa fa-envelope"></i>
                                </span>
                                <input v-model="datepayement" type="date" class="form-control input-circle-right" placeholder="date de debut"> </div>
                        </div>
                        <div class="form-group">
                            <label>Date de reste</label>
                            <div class="input-group">
                                <span class="input-group-addon input-circle-left">
                                    <i class="fa fa-phone"></i>
                                </span>
                                <input type="date" v-model="dateEcheance" class="form-control input-circle-right" placeholder="fin de payement"> </div>
                        </div>
                        
                    </div>
                    <div class="form-actions">
                           
                        <button @click.prevent="payer" class="btn blue">                                                                                                                                   
                        <i class="fa fa-save"></i> <span>Payer </span></button>
                    </div>
                </form>
            </div>
        </div>
        <!-- END SAMPLE TABLE PORTLET-->
    </div>
    <div class="col-md-6">
        <!-- BEGIN CONDENSED TABLE PORTLET-->
        <div class="portlet box yellow">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-picture"></i>Liste de produit commande </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"> </a>
                    <a href="javascript:;" class="remove"> </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-scrollable">
                    <table class="table table-condensed table-hover">
                        <thead>
                            <tr>
                                <th> intrants </th>
                                <th> nom produit </th>
                                <th> unite </th>
                                <th> Qt </th>
                                <th> type </th>
                                <th> prix </th>
                                <th> sous total </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr v-for="listes in liste" :key="listes.id">
                                <td> {{listes.produit.intrants.name}} </td>
                                <td> {{listes.produit.name}} </td>
                                <td> {{listes.produit.unite}} </td>
                                <td> {{listes.qt}} </td>
                                <td> {{listes.produit.puvente}} <em>ariary</em> </td>
                                <td> <span v-if="listes.condition == 1">Gros</span><span v-else>Details</span> </td>
                                <td><span v-if="listes.condition == 1">{{listes.produit.puvente}}</span><span v-else>{{listes.produit.puvente}}</span></td>
                                <td><span v-if="listes.condition == 1">{{listes.produit.puvente * listes.qt}}</span><span v-else>{{listes.produit.puvente* listes.qt}}</span> Ar</td>
                            
                          </tr>
                            
                        </tbody>
                        <footer>
                        <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td style="text-align:center;font-size:20px;"><strong><i class="fa fa-shopping-cart"></i> Total :</i> </strong></td>
                        <td>{{net}} Ariary</td>
                        </tr>
                        </footer>
                    </table>
                </div>
            </div>
        </div>
        <!-- END CONDENSED TABLE PORTLET-->
    </div>
</div>
</div>
<%- include("../pages/footer",{
    script:`
    <!-- <script src="../assets/projet/Vue.js"></script> -->
    <script src="../assets/projet/approvisionnement/payappro.js"></script>
    `
}) %>